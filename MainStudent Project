//MainStudent.java

package mainstudent; 

public class MainStudent {
       public static void main(String[] args) {
           Student s = new Student(); 
           s.insertStudent("Mukhammadkodir", "Abdusalomov", 15)
           s.prints();
       }   
}



// in the same Project but different file  write the following: 

//Student.java

package mainstudent; 

public class Student {
       private String name; 
       private String surname; 
       private int etcs; 
       
       //remember about constructors too :)
       Student(){
          //default consturctor
       }
       
       
       void insertStudent(String n, String s, int e)
       {
           name = n; 
           surname = s; 
           ects = e;
       }
       
       void prints()
       {
            System.out.println("Student: "+name+""+surname+", ECTS:"+ects);
       }
   
}   
